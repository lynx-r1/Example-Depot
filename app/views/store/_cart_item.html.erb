<% if cart_item == @current_item %>
  <tr id="current_item">
<% else %>
  <tr>
<% end %>
  <td><%= cart_item.quantity %>&times;</td>
  <td><%=h cart_item.title %></td>
  <td class="item-price"><%= number_to_currency(cart_item.price) %></td>
  <td>
  <% form_remote_tag :url => { :action => 'del_from_cart', :id => cart_item.product } do %>
    <%= submit_tag I18n.t('layout.cart_item.button.next') %>
  <% end %>
  </td>
</tr>